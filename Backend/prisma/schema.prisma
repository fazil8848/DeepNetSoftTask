generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Menu {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @unique
  description String
}

model Item {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Float
  description String
  menuId      String   @db.ObjectId
}

